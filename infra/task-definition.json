{
  "family": "edgar-auto-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "${ecs_task_execution_role}",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "REPOSITORY_URI",
      "portMappings": [{ "containerPort": 3001, "protocol": "tcp" }],
      "essential": true
    }
  ]
}
