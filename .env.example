# .env.example â€” Authoritative environment variable reference
# Copy this file to .env and update values for your environment
# ALL variables listed here are required or commonly used across environments

# === DATABASE CONFIGURATION ===
# Option A: Full connection URL (recommended)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/edgar_db

# Option B: Individual connection parameters
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=edgar_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# === DOCKER COMPOSE DATABASE CONFIGURATION ===
# Used by docker-compose for database connections
DATABASE_URL_COMPOSE=postgresql://postgres:postgres@db:5432/edgar_db

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# === APPLICATION CONFIGURATION ===
APP_ENV=development
NODE_ENV=development
PORT=5000
LOG_LEVEL=INFO

# === SECURITY CONFIGURATION ===
# CRITICAL: Use AWS Secrets Manager in production, not these example values
JWT_SECRET=dev-jwt-secret-change-in-production
FLASK_SECRET_KEY=dev-flask-secret-change-in-production

# === ADMIN CONFIGURATION ===
ADMIN_USER=admin
ADMIN_PASSWORD_HASH=changeme-use-bcrypt-hash

# === TESTING & DEVELOPMENT FLAGS ===
FALLBACK_TO_MEMORY=false
DEFAULT_TEST_TENANT=test_tenant
SKIP_TENANT_ENFORCEMENT=false

# === CI/CD SPECIFIC VARIABLES ===
APP_INSTANCE_ID=local
CI_DEBUG_ERRORS=false
E2E_TENANT_ID=e2e_test_tenant
EXPOSE_INTERNAL_ERRORS=true

# === FRONTEND API CONFIGURATION ===
# Multiple formats supported for different environments
VITE_PUBLIC_API_URL=http://localhost:3001
VITE_API_BASE_URL=http://localhost:3001
VITE_API_ENDPOINT_URL=http://localhost:3001/api
