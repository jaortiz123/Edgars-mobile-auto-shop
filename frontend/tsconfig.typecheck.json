{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
  "moduleResolution": "node",

    "types": ["vite/client", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
  // Exclude admin areas and any files that import admin modules to keep typecheck focused on app code
    "src/admin/**",
  "src/components/admin/**",
  "src/pages/admin/**",
  "src/pages/admin/CustomerProfilePage.tsx",
  "src/pages/admin/CustomerProfileFoundation.tsx",
  "src/components/admin/AppointmentDrawer.tsx",
  "src/components/admin/ServiceOperationSelect.tsx",
  "src/pages/e2e/**",
  // Exclude app entry to avoid pulling admin routes via App.tsx
  "src/main.tsx",
  // Entry app file imports admin routes; exclude to avoid pulling admin graph
  "src/App.tsx",
  // Utility imports admin dialog types
  "src/utils/conflictUtils.ts",
    "src/test/**",
    "src/test-*/**",
    "src/test-utils/**",
    "src/test*.ts",
    "src/test*.tsx",
    "src/tests/**",
    "src/**/__tests__/**",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/*.stories.*",
    "src/examples/**",
    "src/**/archived/**",
    "src/**/triage-removed/**",
    "src/**/old/**",
    "src/**/*.backup.*",
    "src/components/admin/AppointmentCardRobust.clean.tsx",
    "src/components/admin/AppointmentCardRobust.backup.tsx",
    "src/components/ToastProviderOriginal.tsx",
    "src/services/offlineSupport_old.tsx",
    "src/services/notificationService.clean.ts"
  ]
}
