{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"]
    },
    "composite": true
  },
  "include": ["src", "tests", "../frontend/tests", "../frontend/tests/**/*.ts", "../frontend/tests/**/*.tsx", "./tests", "./tests/**/*.ts", "./tests/**/*.tsx"],
  "exclude": [
    "src/**/*.backup.*"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
