# .env.example â€” Backend environment variables (authoritative)
# Copy this file to .env and update values for backend development

# === DATABASE CONFIGURATION ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=edgar_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_CONNECT_TIMEOUT=2

# Alternative database URL format (takes precedence if set)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/edgar_db

# === APPLICATION CONFIGURATION ===
APP_ENV=development
PORT=3001
LOG_LEVEL=INFO

# === SECURITY CONFIGURATION ===
# CRITICAL: Use AWS Secrets Manager in production
JWT_SECRET=dev-backend-jwt-secret-change-in-production
JWT_ALG=HS256
FLASK_SECRET_KEY=dev-backend-flask-secret-change-in-production

# === TESTING/DEVELOPMENT FLAGS ===
FALLBACK_TO_MEMORY=false

# === RATE LIMITING ===
MOVE_RATE_LIMIT_PER_MIN=60

# === TENANT CONFIGURATION ===
DEFAULT_TEST_TENANT=backend_test_tenant

# === AWS CONFIGURATION (for Lambda functions) ===
AWS_REGION=us-west-2
# COGNITO_USER_POOL_ID=us-east-1_example
# COGNITO_CLIENT_ID=example-client-id

# === DATABASE POOL CONFIGURATION ===
DB_POOL_MIN=5
DB_POOL_MAX=20
