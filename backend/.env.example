# Copy this file to .env and update values for local development

# === DATABASE CONFIGURATION ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=autoshop
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_CONNECT_TIMEOUT=2

# Alternative database URL format (optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/autoshop

# === APPLICATION CONFIGURATION ===
PORT=8000
LOG_LEVEL=INFO
JWT_SECRET=dev-secret-do-not-use-in-prod
JWT_ALG=HS256

# === TESTING/DEVELOPMENT FLAGS ===
FALLBACK_TO_MEMORY=false

# === RATE LIMITING ===
MOVE_RATE_LIMIT_PER_MIN=60

# === AWS CONFIGURATION (for Lambda functions) ===
