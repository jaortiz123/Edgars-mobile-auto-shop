# Test Database Environment Variables
# Copy this file to .env in the tests directory and configure for your test database

# PostgreSQL Test Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=edgar_auto_shop_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSLMODE=disable

# Alternative: Use DATABASE_URL format
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/edgar_auto_shop_test

# Test Tenant Configuration
DEFAULT_TEST_TENANT=00000000-0000-0000-0000-000000000001

# Optional: Test data seeding
SEED_TEST_DATA=true
TEST_DATA_CLEANUP=true
