# CI environment variables for docker-compose and backend

# Postgres (docker-compose picks these up)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ci_autoshop
DATABASE_URL=postgres://postgres:postgres@db:5432/ci_autoshop

# Backend
JWT_SECRET=test-secret
LOG_LEVEL=INFO
DEFAULT_TEST_TENANT=00000000-0000-0000-0000-000000000001
APP_INSTANCE_ID=ci

# Frontend
VITE_PUBLIC_API_URL=http://localhost:3001

# E2E
# Preferred tenant used by Playwright auth/data APIs. Playwright also defaults to this if not set.
E2E_TENANT_ID=00000000-0000-0000-0000-000000000001
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
DATABASE_URL=postgres://test_user:test_password@db:5432/test_autoshop
REDIS_URL=redis://redis:6379
VITE_PUBLIC_API_URL=http://localhost:3001
